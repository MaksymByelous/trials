{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["*.ts"],
      "options": {
        "plugins": [
          "./node_modules/prettier-plugin-sort-imports/dist/index.2.js"
        ],
        "sortingMethod": "alphabetical",
        "newlineBetweenTypes": true
      }
    }
  ]
}
